@{
    ViewBag.Title = "IPAGOO LIBRARY";
}
<div id="book-searchbox" class="row">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3">
            <h4>Search by ISBN</h4>
            <div class="form-group">
                <input id="txtSearchByISBN" type="text" class="form-control" placeholder="Enter book ISBN number...">
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <h4>Search by Title</h4>
            <div class="form-group">
                <input id="txtSearchByTitle" type="text" class="form-control" placeholder="Enter book title...">
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <h4>Search by Author</h4>
            <div class="form-group">
                <input id="txtSearchByAuthor" type="text" class="form-control" placeholder="Enter book Author...">
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <h4>Search by Genre</h4>
            <div class="form-group">
                <select id="ddlSearchByGenre" class="form-control">
                    <option value="">[Select Genre]</option>
                    <option value="Adventure">Adventure</option>
                    <option value="Romance">Romance</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Action">Action</option>
                    <option value="Horror">Horror</option>
                    <option value="Thriller">Thriller</option>
                </select>
            </div>
        </div>
    </div>
    <div class="filterbutton-container row">
        <div class="col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-lg-1 col-md-1 col-sm-1">
            <button id="btnSearchBooks" type="submit" class="btn btn-primary">Find</button>
            
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <a id="btnClearSearchBooks">Clear</a>
        </div>
    </div>
</div>
<div id="book-grid" class=" row col-lg-12 col-md-12 col-sm-12 row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="book-grid-container"></tbody>
    </table>
    <script id="book-grid-template" type="text/x-handlebars-template">
        {{#each this}}
        <tr id="tr{{ISBN}}">
            <td data-for="ISBN" data-val="{{ISBN}}">{{ISBN}}</td>
            <td data-for="Title" data-val="{{Title}}">{{Title}}</td>
            <td data-for="Author" data-val="{{AuthorName}}">{{AuthorName}}</td>
            <td data-for="Genre" data-val="{{Genre}}">{{Genre}}</td>
            @*<td data-for="Genre" class="visible-{{IsOut}}">Out of stock</td>
                <td class="invisible-{{IsOut}}"><input type="button" id="btnBorrow{{ISBN}}" class="btnBorrowBook hide" data-isbn="{{ISBN}}" value="BORROW" /></td>*@

        </tr>
        {{/each}}
    </script>
</div>
